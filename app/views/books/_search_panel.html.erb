<div class="search-panel-container">
  <article class="panel is-info">
    <p class="panel-heading">
      Search for books
    </p>
    <p class="panel-tabs">
      <a class="is-active">Title</a>
      <a>Author</a>
      <a>ISBN</a>
    </p>
    <div class="panel-block">
      <p class="control has-icons-left">
        <input class="input is-info" type="text" placeholder="Search">
        <span class="icon is-left">
          <i class="fas fa-search" aria-hidden="true"></i>
        </span>
      </p>
    </div>
    <a class="panel-block radio-header">Choose a search source:</a>
    <label class="panel-block">
      <input type="radio" name="source" value="database" checked>
      <p class="radio-option">Counseling Book Tags Library</p>
    </label>
    <label class="panel-block">
      <input type="radio" name="source" value="goodreads">
      <p class="radio-option">Goodreads</p>
    </label>
  </article>
</div>
