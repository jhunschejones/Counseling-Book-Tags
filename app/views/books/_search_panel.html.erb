<div class="search-panel-container" data-controller="search-panel">
  <article class="panel is-info">
    <p class="panel-heading">
      Search for books
    </p>
    <p class="panel-tabs">
      <a class="tab is-active" data-value="title" data-action="click->search-panel#changeTab">Title</a>
      <a class="tab" data-value="author" data-action="click->search-panel#changeTab">Author</a>
      <a class="tab" data-value="isbn" data-action="click->search-panel#changeTab">ISBN</a>
    </p>
    <div class="panel-block">
      <p class="control has-icons-left">
        <%# input `placeholder` should match default tab on panel %>
        <input class="input is-info" type="text" placeholder="Search by title..."
               data-target="search-panel.search" data-action="keydown->search-panel#search">
        <span class="icon is-left">
          <i class="fas fa-search" aria-hidden="true"></i>
        </span>
      </p>
    </div>
    <a class="panel-block radio-header">Choose a search source:</a>
    <label class="panel-block">
      <input type="radio" name="source" value="database" checked data-target="search-panel.database">
      <p class="radio-option">Counseling Book Tags Library</p>
    </label>
    <label class="panel-block">
      <input type="radio" name="source" value="goodreads" data-target="search-panel.goodreads">
      <p class="radio-option">Goodreads</p>
    </label>
  </article>
</div>
